<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppOpenAdExampleActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/show_app_open_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/purple_500"
        android:padding="10dp"
        android:text="@string/show_app_open_ad"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_app_open_ad"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/move_the_app_in_background_and_wait_for_5_seconds_to_comeback_to_see_the_ad" />

</RelativeLayout>